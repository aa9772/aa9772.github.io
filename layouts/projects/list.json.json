{{- /* layouts/projects/list.json.json */ -}}
[
{{- $pages := .Pages -}}
{{- range $index, $p := $pages -}}
  {{- if $index }},{{ end -}}
  {
    "title": {{ $p.Title | jsonify }},
    "summary": {{ $p.Params.summary | default "" | jsonify }},
    "tags": {{ $p.Params.tags | default (slice) | jsonify }},
    "url": {{ $p.RelPermalink | jsonify }}
  }
{{- end -}}
]
