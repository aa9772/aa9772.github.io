{{ define "main" }}
<main>
  <!-- Titolo del sito -->
  <h1>{{ .Site.Title }}</h1>

  <!-- Contenuto del _index.md -->
  {{ .Content }}

  <!-- Opzionale: elenco di pagine non 'projects' o 'observation' -->
  {{ range where .Pages "Type" "not in" (slice "projects" "observation") }}
    <article>
      <h2><a href="{{ .RelPermalink }}">{{ .Title }}</a></h2>
      <p>{{ .Summary }}</p>
    </article>
  {{ end }}
</main>
{{ end }}
